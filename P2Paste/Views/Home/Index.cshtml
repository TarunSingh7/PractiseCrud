@model List<Database.Entity.EmployeeModel>

<div>
	<table class="table table-bordered tabletable-responsive">
		<tr>
			<th>Name</th>
			<th>Gender</th>
			<th>Address</th>
			
			<th>Salary</th>
			<th>Delete</th>
			<th>Edit</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Gender</td>
				<td>@item.Address</td>
				<td>@item.salary</td>
				
				<td><a asp-action="Delete" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-danger">Delete </a></td>
				<td><a asp-action="Edit" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-warning">Edit</a></td>
			</tr>

		}

	</table>
</div>
<a asp-action="Add" asp-controller="Home" class="btn btn-secondary">Add Employee+</a>